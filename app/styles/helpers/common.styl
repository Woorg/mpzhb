.page
	background #fff
	font-display swap
	font-family $v
	font-weight normal
	font-size 16px
	color #292929
	line-height 1.625
	letter-spacing tracking(-25, 16)
	tr(font-size .3s ease)
	+r($t)
		font-size 14px
.button
	border none
	padding-top 21px
	padding-right 60px
	padding-bottom 19px
	padding-left 60px
	display inline-block
	vertical-align middle
	border-radius 5px
	background-color #4cbaba
	color #ffffff
	font-size 18px
	text-align center
	line-height 1
	text-decoration none
	text-transform uppercase
	tr(all .3s ease)
	+r($t)
		padding-top 10px
		padding-right 30px
		padding-bottom 10px
		padding-left 30px
	&:hover,
	&:focus
		background-color darken(#4cbaba, 10)
		color #ffffff
		text-decoration none
	&__icon
		margin-left 15px
		width 20px
		height 14px
		fill currentColor

.button_second
	padding-top 19px
	padding-right 15px
	padding-bottom 15px
	padding-left 13px
	background-color #eeeeee
	font-size 14px
	color #292929
	letter-spacing tracking(-25, 14)
	.button__icon
		margin-left 0
		margin-right 5px
		display inline-block
		vertical-align middle
		width 18px
		height 17px
		fill #4cbaba
	&:hover
		background-color darken(#eeeeee, 10)
		color #292929

.title
	font-size 36px
	font-weight 700
	text-transform uppercase
	line-height 46px
	letter-spacing tracking(-25, 36)
	+r($l)
		font-size 22px
		line-height 29px
	+r($t)
		font-size 14px
		line-height 18px

.subtitle
	font-size 24px
	font-weight 700
	text-transform uppercase
	letter-spacing tracking(-25, 24)
	+r($l)
		font-size 15px
	+r($t)
		font-size 14px
img
	display block
	max-width 100%
	height auto

.wysiwyg
	h1,
	h2
		margin-bottom 50px
		font-size 36px
		font-weight 700
		text-transform uppercase
		line-height 46px
		letter-spacing tracking(-25, 36)
		+r($l)
			font-size 22px
			line-height 29px
		+r($t)
			font-size 14px
			line-height 18px
	// h2
	// 	font-size 24px
	// 	font-weight 700
	// 	text-transform uppercase
	h3,
	h4
		margin-bottom 50px
		font-size 24px
		font-weight 700
		text-transform uppercase
		letter-spacing tracking(-25, 24)
		+r($l)
			font-size 15px
	ul
		margin-left 0
		margin-bottom 50px

	p
		margin-bottom 50px
		font-size 16px
		line-height 26px
		letter-spacing tracking(-25, 16)
		&:last-child
			margin-bottom 0
		+r($l)
			margin-bottom 31px
		+r($t)
			margin-bottom 19px
			font-size 14px
