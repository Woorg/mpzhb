.page
	background #fff
	font-display swap
	font-family $v
	font-weight normal
	font-size 16px
	color #292929
	line-height 1.625
	letter-spacing tracking(-25, 16)
	tr(font-size .3s ease)

.button
	border none
	padding-top 21px
	padding-right 60px
	padding-bottom 19px
	padding-left 60px
	display inline-block
	vertical-align middle
	border-radius 5px
	background-color #4cbaba
	color #ffffff
	font-size 18px
	text-align center
	line-height 1
	text-decoration none
	text-transform uppercase
	tr(all .3s ease)
	&:hover
		background-color darken(#4cbaba, 10)
		color currentColor
		text-decoration none
	&__icon
		margin-left 15px
		width 20px
		height 14px
		fill currentColor
.title
	font-size 36px
	font-weight 700
	text-transform uppercase
	line-height 46px
	letter-spacing tracking(-25, 36)

.subtitle
	font-size 24px
	font-weight 700
	text-transform uppercase
	letter-spacing tracking(-25, 24)

img
	display block
	max-width 100%
	height auto

.wysiwyg
	h1,
	h2
		margin-bottom 50px
		font-size 36px
		font-weight 700
		text-transform uppercase
		line-height 46px
		letter-spacing tracking(-25, 36)

	// h2
	// 	font-size 24px
	// 	font-weight 700
	// 	text-transform uppercase
	h3,
	h4
		margin-bottom 50px
		font-size 24px
		font-weight 700
		text-transform uppercase
		letter-spacing tracking(-25, 24)

	ul
		margin-left 0
		margin-bottom 50px

	p
		margin-bottom 50px
		font-size 16px
		line-height 26px
		letter-spacing tracking(-25, 16)

		&:last-child
			margin-bottom 0
