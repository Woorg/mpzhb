.form
	padding-top 20px
	padding-right 27px
	padding-bottom 30px
	padding-left 27px
	border-radius 5px
	border 2px solid #eec400
	background-color #fff
	&__title
		margin-bottom 20px
		@extends .subtitle
		font-size 18px
		line-height 1.55555555555556
		text-align center
	&__field
		margin-bottom 12px
	&__field_message
		margin-bottom 18px
	&__field_file
		margin-bottom 20px
		overflow hidden
	&__label
		margin-bottom 5px
		font-size 14px
		display block
		letter-spacing tracking(-25, 14)
		cursor pointer
	&__label_file
		position relative
		white-space nowrap
	&__input,
	&__textarea
		padding-left 10px
		padding-right 10px
		width 100%
		height 47px
		border-radius 5px
		border 2px solid #eeeeee
		background-color #ffffff
		color #7f7f7f
		font-size 14px
		+placeholder()
			color #7f7f7f
	&__textarea
		padding-top 5px
		min-height 140px
	&__file
		display none
		&:checked
			display block
	&__file-button
		margin-right 10px
		padding-top 10px
		padding-right 16px
		padding-bottom 10px
		padding-left 16px
		display inline-block
		vertical-align middle
		background #EEE
		color #292929
		font-size 12px
		text-transform uppercase
		letter-spacing tracking(-25, 12)
		border-radius 5px
		tr(all .3s ease)
		&:hover
			background darken(#EEE, 10)
	&__file-text
		max-width 154px
		display inline-block
		vertical-align middle
		color #7f7f7f
		text-overflow ellipsis
		overflow hidden
		+r($d)
			max-width 100%
	&__file-input
		display none

	&__submit
		padding-top 16px
		padding-right 10px
		padding-bottom 17px
		padding-left 10px
		width 100%
		font-size 14px
		
