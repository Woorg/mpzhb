.advantages
	padding-left 60px
	// background #94d6d5
	+r($l)
		padding-left 0
	&__title
		margin-bottom 43px
		@extends .title
		+r($l)
			margin-bottom 27px
	&__item
		position relative
		margin-bottom 26px
		padding-left 30px
		&:after
			position absolute
			top 10px
			left 0
			content ''
			width 13px
			height 10px
			background url(../images/general/list-icon.svg) 0 0 / cover no-repeat


.advantages_second
	padding-left 0
	display block
	background #eeeeee
	overflow hidden
	.advantages__in
		padding-top 70px
		padding-bottom 43px
		+r($l)
			padding-top 44px
			// padding-bottom 44px
	.advantages__title
		margin-bottom 43px
		@extends .title
		text-align center
	.advantages__list
		clr()
	.advantages__item
		padding-left 0
		&:after
			display none
		+r($l)
			margin-bottom 20px
	.advantages__item_first
		.advantages__icon
			top 10px
			left 20px
			retinaSprite($advantages_1_group)
	.advantages__item_second
		.advantages__icon
			top 12px
			left 23px
			width 49px
			height 68px
	.advantages__item_third
		.advantages__icon
			top 12px
			left 22px
			retinaSprite($advantages_3_group)
	.advantages__icon
		position absolute
		top 0
		left 0
		fill #4cbaba
	.advantages__link
		position relative
		padding-left 113px
		display block
		color #292929
		text-decoration none
		&:hover
			color currentColor
			text-decoration none
			.services__item-title
				text-decoration none
	.advantages__item-title
		margin-bottom 10px
		font-size 18px
		line-height 28px
		text-decoration none
		text-transform uppercase
		letter-spacing tracking(-25, 18)
	.advantages__item-text
		letter-spacing tracking(-25, 16)
