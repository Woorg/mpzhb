.header
	position relative
	z-index 1
	&__top
		padding-top 12px
		padding-bottom 15px
		min-height 50px
		background-color #292929
		font-size 14px
		color #7f7f7f
		+r($l)
			text-align left
		+r($m)
			padding-bottom 12px
			min-height auto
			line-height 1
			text-align center
	&__time,
	&__phone,
	&__bid,
	&__download,
	&__tender
		display inline-block
		vertical-align middle
		color #7f7f7f
		text-decoration none
		font-size 14px
		&:hover
			color #4cbaba
			text-decoration none
		+r($d)
			margin-bottom 6px
			margin-right 30px
		+r($m)
			margin-right 0
			margin-bottom 0
			font-size 11px
			text-align left
	&__time,
	&__phone
		margin-right 30px
		&:last-child
			margin-right 0
		+r($m)
			margin-right 0
	&__time
		&:hover
			color #7F7F7F
			text-decoration none
	&__time-icon,
	&__phone-icon,
	&__bid-icon,
	&__download-icon,
	&__tender-icon
		margin-top -2px
		margin-right 5px
		display inline-block
		vertical-align middle
		width 14px
		height 14px
		fill #4cbaba
	&__top-right
		padding-top 7px
		justify()
		+r($d)
			text-align left
			text-align-last left
			&:after

				display none
		+r($l)
			padding-top 0
			text-align left
			text-align-last left
		+r($t)
			text-align-last left
		+r($m)
			// padding-top 0
			display none
			// text-align left
			// text-align-last left
	&__body
		padding-top 34px
		// padding-bottom 15px
		padding-bottom 30px
		background-color #ffffff
		font-size 0
		box-shadow 0 0 20px rgba(41, 41, 41, .2)
		+r($l)
			padding-bottom 0
			text-align center
		+r($m)
			text-align left
		.header__in
			position relative
			display flex
			flex-wrap wrap
			justify-content space-between
			align-items center
			clr()
			+r($l)
				// display block
				flex-grow 1
				justify-content center

	&__logo,
	&__nav,
	&__search-form
		display inline-block
		vertical-align middle
		+r($d)
			display block
	&__nav
		+r($l)
			width 100%
			order 3
	&__logo
		margin-right 65px
		margin-right auto
		+r($l)
			margin auto
	.header__search-form
		// margin-top 12px
		margin-left 40px
		// float right
		+r(1319px)
			margin-left 0
			width 100%
		+r($l)
			margin-top 18px
			margin-bottom 0
			margin-left 0
		+r(480px)
			margin-top 10px
		// +r($m)
		// 	margin-top 0

.logo
	retinaSprite($logo_group)
	+r($m)
		width 100%
		background url('../images/general/logo.png') 0 0 no-repeat
		background-size contain
